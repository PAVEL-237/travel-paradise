# API Configuration
VITE_API_URL=http://localhost:8000/api

# Application Configuration
VITE_APP_NAME=Travel Paradise
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_STATISTICS=true
VITE_ENABLE_FILE_UPLOAD=true

# Security
VITE_TOKEN_EXPIRATION=3600
VITE_REFRESH_TOKEN_EXPIRATION=604800

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=50

# Cache
VITE_CACHE_DURATION=300

# Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Timeouts
VITE_API_TIMEOUT=30000
VITE_DEBOUNCE_DELAY=300